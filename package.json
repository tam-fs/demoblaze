{
  "dependencies": {
    "dotenv": "^17.2.3",
    "playwright": "^1.56.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^24.7.2",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1",
    "cross-env": "^7.0.3"
  },
  "scripts": {
    "test": "cross-env TEST_ENV=stg npx playwright test",
    "test:stg": "cross-env TEST_ENV=stg npx playwright test",
    "test:dev": "cross-env TEST_ENV=dev npx playwright test",
    "test:prod": "cross-env TEST_ENV=prod npx playwright test",
    "test:headed": "cross-env TEST_ENV=stg npx playwright test --headed",
    "test:headed:stg": "cross-env TEST_ENV=stg npx playwright test --headed",
    "test:headed:dev": "cross-env TEST_ENV=dev npx playwright test --headed",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results"
  }
}
